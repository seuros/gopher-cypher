    "query": "FOREACH (x IN $list | SET x.flag = true)"
  },
  {
    "description": "CALL subquery with RETURN",
    "query": "CALL { RETURN $x AS foo } RETURN foo"
  },
  {
    "description": "Pagination with parameters",
    "query": "MATCH (n) RETURN n SKIP $skip LIMIT $limit"
  },
  {
    "description": "Aggregation and aliasing",
