  },
  {
    "description": "Match with WHERE clause",
    "query": "MATCH (n) WHERE n.age > $age RETURN n"
  },
  {
    "description": "MERGE with ON CREATE SET",
    "query": "MERGE (n:User {email: $email}) ON CREATE SET n.created_at = $ts"
  },
  {
